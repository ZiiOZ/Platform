{
  "compilerOptions": {
    "target": "es6",                         // Output modern JS
    "module": "commonjs",                    // âœ… Fixes the Render issue
    "rootDir": "./",                         // Use current folder as root
    "outDir": "dist",                        // Output compiled files to dist/
    "esModuleInterop": true,                 // Allow default imports from CJS
    "strict": true,                          // Enable strict mode
    "skipLibCheck": true,                    // Faster builds
    "forceConsistentCasingInFileNames": true // Catch import case mismatches
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
